<Window x:Class="Calculator2000.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator2000"
        mc:Ignorable="d"
        Title="Calculator2000" WindowStartupLocation="CenterScreen" Height="935" Width="605" ResizeMode="NoResize" >
    <Grid Background="#232322">

        <TextBox x:Name="tokenBox" Text="{Binding Token, 
                    UpdateSourceTrigger=PropertyChanged}"
                 FontSize="60" TextAlignment="Center"
                 Grid.Row="0" Grid.ColumnSpan="4" 
                 Foreground="White"
                 Background="#232322"
                 />
        

        <Button Content="7" Click="bttn7" Grid.Column="0" Grid.Row="2"/>
        <Button Content="8" Click="bttn8" Grid.Column="1" Grid.Row="2"/>
        <Button Content="9" Click="bttn9" Grid.Column="2" Grid.Row="2"/>

        <Button Content="4" Click="bttn4" Grid.Column="0" Grid.Row="3"/>
        <Button Content="5" Click="bttn5" Grid.Column="1" Grid.Row="3"/>
        <Button Content="6" Click="bttn6" Grid.Column="2" Grid.Row="3"/>

        <Button Content="1" Click="bttn1" Grid.Column="0" Grid.Row="4"/>
        <Button Content="2" Click="bttn2" Grid.Column="1" Grid.Row="4"/>
        <Button Content="3" Click="bttn3" Grid.Column="2" Grid.Row="4"/>

        <Button Content="0" Click="bttn0" Grid.Column="1" Grid.Row="5"/>


        <Button Content="=" Click="bttneq" Grid.Column="3" Grid.Row="5" Background="#f46309"/>
        <Button Content="+" Click="bttnpl" Grid.Column="3" Grid.Row="4"/>
        <Button Content="-" Click="bttnmn" Grid.Column="3" Grid.Row="3"/>
        <Button Content="*" Click="bttnmul" Grid.Column="3" Grid.Row="2"/>

        <Button Content="(" Click="bttnbktr" Grid.Column="0" Grid.Row="1"/>
        <Button Content=")" Click="bttnbktl" Grid.Column="1" Grid.Row="1"/>
        <Button Content="/" Click="bttndeg" Grid.Column="2" Grid.Row="1"/>
        <Button Content="delete" Click="bttndel" Grid.Column="3" Grid.Row="1" Background="#f46309" />



        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
    </Grid>
</Window>
   
